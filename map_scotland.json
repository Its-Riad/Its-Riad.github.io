{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Geographic distribution of Scottish educational institutions by enrollment size.",
  "title": {
    "text": "Scottish Schools: Geographic Distribution & Enrollment",
    "subtitle": "Pupil enrollment across Scotland by school type (2023)",
    "fontSize": 18,
    "fontWeight": "bold",
    "subtitleFontSize": 12,
    "subtitleColor": "#666",
    "anchor": "middle"
  },
  "width": 350,
  "height": 450,
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/jhellingsdata/RADataHub/refs/heads/main/MappingWorkshop/geo_data/LAD_SCT_2025_05.topojson",
        "format": {"type": "topojson", "feature": "object_name"}
      },
      "mark": {
        "type": "geoshape",
        "fill": "#2C3E50",
        "stroke": "#34495E",
        "strokeWidth": 0.8
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/antogriffin12/antogriffin12.github.io/refs/heads/main/Portfolio/SG_SchoolRoll_2023.csv"
      },
      "mark": {"type": "circle", "opacity": 0.7, "stroke": "white", "strokeWidth": 0.5},
      "encoding": {
        "longitude": {"field": "Longitude", "type": "quantitative"},
        "latitude": {"field": "Latitude", "type": "quantitative"},
        "size": {
          "field": "PupilRoll",
          "type": "quantitative",
          "scale": {"range": [15, 500]},
          "title": "Student Enrollment",
          "legend": {
            "orient": "bottom-right",
            "direction": "vertical"
          }
        },
        "color": {
          "field": "SchoolType",
          "type": "nominal",
          "scale": {
            "range": ["#FF6B6B", "#4ECDC4", "#45B7D1", "#FFA07A", "#98D8C8", "#F7DC6F", "#BB8FCE", "#85C1E2", "#F8B739", "#6C5CE7"]
          },
          "title": "Institution Type",
          "legend": {
            "orient": "bottom-left",
            "direction": "vertical",
            "titleLimit": 150
          }
        },
        "tooltip": [
          {"field": "SchoolName", "type": "nominal", "title": "Institution Name"},
          {"field": "LAName", "type": "nominal", "title": "Local Authority"},
          {
            "field": "PupilRoll",
            "type": "quantitative",
            "title": "Total Enrollment",
            "format": ","
          },
          {"field": "SchoolType", "type": "nominal", "title": "Institution Type"}
        ]
      }
    }
  ],
  "projection": {"type": "mercator"}
}