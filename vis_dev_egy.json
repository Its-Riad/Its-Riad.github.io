{
  "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
  "description": "Purchasing Power Loss in Egypt, Morocco, and Algeria (2010-2024)",
  "config": {
    "background": null,
    "axis": {
      "labelColor": "white",
      "titleColor": "white",
      "labelFontSize": 14,
      "titleFontSize": 16,
      "gridColor": "#444",
      "domainColor": "white"
    },
    "legend": {
      "labelColor": "white",
      "titleColor": "white",
      "labelFontSize": 14
    },
    "title": {
      "color": "white",
      "fontSize": 20,
      "subtitleColor": "white",
      "subtitleFontSize": 14
    }
  },
  "title": {
    "text": "Cumulative Purchasing Power Loss: Egypt, Morocco & Algeria",
    "subtitle": "Source: World Bank API"
  },
  "width": 700,
  "height": 400,
  "data": {"url": "north_africa_purchasing_power_combined.csv"},
  "encoding": {
    "x": {
      "field": "date",
      "type": "temporal",
      "title": "",
      "axis": {"format": "%Y", "labelAngle": -45}
    }
  },
  "layer": [
    {
      "transform": [
        {
          "fold": [
            "egypt_purchasing_power",
            "morocco_purchasing_power",
            "algeria_purchasing_power"
          ],
          "as": ["country", "purchasing_power"]
        },
        {
          "calculate": "replace(datum.country, '_purchasing_power', '')",
          "as": "country_name"
        },
        {
          "calculate": "upper(slice(datum.country_name, 0, 1)) + slice(datum.country_name, 1)",
          "as": "country_display"
        }
      ],
      "mark": {"type": "line", "point": true, "strokeWidth": 2.5},
      "encoding": {
        "y": {
          "field": "purchasing_power",
          "type": "quantitative",
          "title": "Purchasing Power (Base 100 = 2010)",
          "scale": {"domain": [0, 105]}
        },
        "color": {
          "field": "country_display",
          "type": "nominal",
          "legend": {"title": null}
        }
      }
    },
    {
      "mark": {"type": "rule", "color": "white", "strokeWidth": 2},
      "encoding": {
        "opacity": {
          "condition": {"value": 0.5, "param": "hover", "empty": false},
          "value": 0
        },
        "tooltip": [
          {"field": "year", "type": "quantitative", "title": "Year"},
          {"field": "egypt_purchasing_power", "type": "quantitative", "title": "Egypt", "format": ".2f"},
          {"field": "morocco_purchasing_power", "type": "quantitative", "title": "Morocco", "format": ".2f"},
          {"field": "algeria_purchasing_power", "type": "quantitative", "title": "Algeria", "format": ".2f"}
        ]
      },
      "params": [
        {
          "name": "hover",
          "select": {
            "type": "point",
            "fields": ["date"],
            "nearest": true,
            "on": "pointerover",
            "clear": "pointerout"
          }
        }
      ]
    }
  ]
}