{
  "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
  "config": {
    "background": null,
    "view": {"stroke": null},
    "axis": {
      "labelColor": "white",
      "titleColor": "white",
      "labelFontSize": 14,
      "titleFontSize": 16,
      "gridColor": "#444",
      "domainColor": "white"
    },
    "legend": {
      "labelColor": "white",
      "titleColor": "white",
      "labelFontSize": 14
    },
    "title": {
      "color": "white",
      "fontSize": 20,
      "subtitleColor": "white",
      "subtitleFontSize": 14
    }
  },
  "title": {
    "text": "Cumulative Purchasing Power Loss: Egypt with 6-Month Forecast",
    "subtitle": "Value of 100 EGP (2010 baseline) | Source: World Bank, CBE, sentiment analysis"
  },
  "width": 880,
  "height": 500,
  "data": {
    "url": "https://raw.githubusercontent.com/Its-Riad/Its-Riad.github.io/main/data/egypt_purchasing_power_forecast.csv"
  },
  "mark": {
    "type": "area",
    "line": {"strokeWidth": 3},
    "point": {"size": 80, "filled": true}
  },
  "encoding": {
    "x": {
      "field": "date",
      "type": "temporal",
      "title": ""
    },
    "y": {
      "field": "purchasing_power",
      "type": "quantitative",
      "title": "Purchasing Power (2010 = 100 EGP)",
      "scale": {"domain": [0, 105]}
    },
    "color": {
      "field": "type",
      "type": "nominal",
      "scale": {
        "domain": ["actual", "forecast"],
        "range": ["#C41E3A", "#8B0000"]
      },
      "legend": null
    },
    "fillOpacity": {
      "field": "type",
      "type": "nominal",
      "scale": {
        "domain": ["actual", "forecast"],
        "range": [0.6, 0.3]
      }
    },
    "strokeDash": {
      "field": "type",
      "type": "nominal",
      "scale": {
        "domain": ["actual", "forecast"],
        "range": [[1], [5, 5]]
      }
    },
    "tooltip": [
      {"field": "date", "type": "temporal", "title": "Date", "format": "%b %Y"},
      {"field": "purchasing_power", "type": "quantitative", "title": "Value of 100 EGP", "format": ".2f"},
      {"field": "inflation", "type": "quantitative", "title": "Inflation (%)", "format": ".1f"},
      {"field": "type", "type": "nominal", "title": "Type"}
    ]
  }
}
