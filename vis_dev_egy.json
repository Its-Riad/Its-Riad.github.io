{
  "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
  "description": "Egyptian purchasing power loss over time.",
  "width": 880,
  "height": 400,
  "config": {
    "background": null,
    "view": {
      "stroke": null
    },
    "axis": {
      "labelColor": "white",
      "titleColor": "white",
      "labelFontSize": 12,
      "titleFontSize": 14,
      "gridColor": "#444",
      "domainColor": "white"
    }
  },
  "data": {
    "url": "egypt_purchasing_power_cumulative.csv"
  },
  "mark": {
    "type": "area",
    "line": {
      "color": "darkred"
    },
    "color": {
      "x1": 1,
      "y1": 1,
      "x2": 1,
      "y2": 0,
      "gradient": "linear",
      "stops": [
        {
          "offset": 0,
          "color": "white"
        },
        {
          "offset": 1,
          "color": "darkred"
        }
      ]
    },
    "tooltip": true
  },
  "encoding": {
    "x": {
      "field": "date",
      "type": "temporal"
    },
    "y": {
      "field": "purchasing_power",
      "type": "quantitative",
      "scale": {
        "domain": [0, 100]
      },
      "title": "Purchasing Power (2010=100)"
    },
    "tooltip": [
      {"field": "year", "type": "quantitative", "title": "Year"},
      {"field": "purchasing_power", "type": "quantitative", "title": "Purchasing Power", "format": ".2f"},
      {"field": "inflation", "type": "quantitative", "title": "Inflation (%)", "format": ".2f"}
    ]
  }
}