{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "config": {
    "background": null,
    "axis": {
      "labelColor": "white",
      "titleColor": "white",
      "labelFontSize": 14,
      "titleFontSize": 16,
      "gridColor": "#444",
      "domainColor": "white"
    },
    "legend": {
      "labelColor": "white",
      "titleColor": "white",
      "labelFontSize": 14
    },
    "title": {
      "color": "white",
      "fontSize": 20,
      "subtitleColor": "white",
      "subtitleFontSize": 14
    }
  },
  "data": {
    "url":"https://api.worldbank.org/v2/country/mar;egy;dza/indicator/NY.GDP.DEFL.KD.ZG?format=json&per_page=300&date=1990:2024",
    "format": {"property": "[1]"}
  },
  "width": 700,
  "height": 300,
  "params": [    
    {
      "name": "minYear", 
      "value": 1990,
      "bind": {
        "input": "range",
        "min": 1990, 
        "max": 2024, 
        "step": 1,
        "name": "Start year:"
      }
    },
    {
      "name": "maxYear", 
      "value": 2024,
      "bind": {
        "input": "range",
        "min": 1990, 
        "max": 2024, 
        "step": 1,
        "name": "End year:"
      }
    }
  ],
  "transform": [
    {"calculate": "year(datum.date)", "as": "year"},
    {"filter": "datum.year >= minYear"},
    {"filter": "datum.year <= maxYear"}
  ],
  "mark": {"type": "line", "point": true, "tooltip": true},
  "title": {
    "text": "Inflation in North Africa",
    "subtitle": "Source: World Bank API"
  },
  "encoding": {
    "x": {
      "field": "date",
      "type": "temporal",
      "title": ""
    },
    "y": {
      "field": "value",
      "type": "quantitative",
      "title": "Inflation %"
    },
    "color": {
      "field": "country.value",
      "type": "nominal",
      "legend": {"title": null}
    }
  }
}