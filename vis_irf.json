{
  "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
  "title": {
    "text": "Impulse Response Function: Media Sentiment Shock on Inflation",
    "subtitle": "Response of consumer confidence (CCI) to media sentiment shock. Source: Dissertation VAR Analysis",
    "color": "white",
    "subtitleColor": "white",
    "fontSize": 20
  },
  "config": {
    "background": null,
    "axis": {
      "labelColor": "white",
      "titleColor": "white",
      "labelFontSize": 14,
      "titleFontSize": 16,
      "gridColor": "#444",
      "domainColor": "white"
    },
    "legend": {
      "labelColor": "white",
      "titleColor": "white",
      "labelFontSize": 14
    }
  },
  "width": 800,
  "height": 400,
  "data": {
    "values": [
      {"step": 0, "irf": 3.5, "lower": 2.8, "upper": 4.2},
      {"step": 1, "irf": 3.2, "lower": 2.3, "upper": 4.1},
      {"step": 2, "irf": 2.8, "lower": 1.8, "upper": 3.8},
      {"step": 3, "irf": 2.3, "lower": 1.3, "upper": 3.3},
      {"step": 4, "irf": 1.8, "lower": 0.9, "upper": 2.7},
      {"step": 5, "irf": 1.3, "lower": 0.5, "upper": 2.1},
      {"step": 6, "irf": 0.9, "lower": 0.2, "upper": 1.6},
      {"step": 7, "irf": 0.6, "lower": 0.0, "upper": 1.2},
      {"step": 8, "irf": 0.4, "lower": -0.1, "upper": 0.9}
    ]
  },
  "layer": [
    {
      "mark": {"type": "area", "opacity": 0.3, "color": "#94a3b8"},
      "encoding": {
        "x": {
          "field": "step",
          "type": "quantitative",
          "title": "Periods After Shock",
          "scale": {"domain": [0, 8]}
        },
        "y": {
          "field": "lower",
          "type": "quantitative",
          "title": "Response (Percentage Points)"
        },
        "y2": {"field": "upper"}
      }
    },
    {
      "mark": {
        "type": "line",
        "strokeWidth": 3,
        "color": "#60a5fa",
        "point": {"size": 80, "filled": true}
      },
      "encoding": {
        "x": {"field": "step", "type": "quantitative"},
        "y": {"field": "irf", "type": "quantitative"},
        "tooltip": [
          {"field": "step", "type": "quantitative", "title": "Period"},
          {"field": "irf", "type": "quantitative", "title": "IRF Response", "format": ".2f"},
          {"field": "lower", "type": "quantitative", "title": "95% CI Lower", "format": ".2f"},
          {"field": "upper", "type": "quantitative", "title": "95% CI Upper", "format": ".2f"}
        ]
      }
    },
    {
      "mark": {"type": "rule", "strokeDash": [5, 5], "color": "white", "strokeWidth": 1},
      "encoding": {
        "y": {"datum": 0}
      }
    }
  ]
}